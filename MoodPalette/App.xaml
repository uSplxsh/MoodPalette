<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:converters="clr-namespace:MoodPalette.Converters"
             xmlns:local="clr-namespace:MoodPalette"
             x:Class="MoodPalette.App">
    <Application.Resources>
        <ResourceDictionary>
            
            <converters:IndexToBorderColorConverter x:Key="IndexToBorderColorConverter" />
            <converters:NullToBooleanConverter x:Key="NullToBooleanConverter" />
            <converters:NotNullToBooleanConverter x:Key="NotNullToBooleanConverter" />
            <converters:StringVisibilityConverter x:Key="StringVisibilityConverter"/>
            
            <ResourceDictionary.MergedDictionaries>
                
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
                
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
